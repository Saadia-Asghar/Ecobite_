# ============================================
# ECOBITE ENVIRONMENT VARIABLES - AZURE EDITION
# ============================================

# 1. ENVIRONMENT
NODE_ENV=development
PORT=3002

# 2. SECURITY (REQUIRED)
# Generate using: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
JWT_SECRET=your-super-secret-key-min-32-characters-long

# 3. URLS
FRONTEND_URL=http://localhost:5173
VITE_API_URL=http://localhost:3002

# 4. AZURE SQL DATABASE (Replaces SQLite)
AZURE_SQL_HOST=your-server.database.windows.net
AZURE_SQL_USER=your_db_user
AZURE_SQL_PASSWORD=your_secure_password
AZURE_SQL_DATABASE=ecobite_db

# 5. AZURE AI VISION (Food Quality)
AZURE_VISION_ENDPOINT=https://your-resource.cognitiveservices.azure.com/
AZURE_VISION_KEY=your_vision_api_key

# 6. AZURE MAPS (Logistics)
AZURE_MAPS_KEY=your_azure_maps_subscription_key
VITE_AZURE_MAPS_KEY=your_azure_maps_subscription_key

# 7. MICROSOFT AUTHENTICATION (Entra ID)
AZURE_AUTH_CLIENT_ID=your_client_id
AZURE_AUTH_TENANT_ID=your_tenant_id

# 8. EMAIL SERVICE (Optional - SendGrid recommended)
# SENDGRID_API_KEY=your_sendgrid_api_key
# EMAIL_FROM=noreply@ecobite.org

